<style>
	.hero {
		display: flex;
		position: relative;
		width: 100%;
		height: 200px;
		background-color: var(--ca_blue_norm);
		& video, img {
			width: 100%;
			height: 50%;
			object-fit: fill;
			aspect-ratio: 16/9;
		}
		& h2 {
			position: absolute;
			display: flex;
			justify-content: center;
			align-items: center;
			padding: 1rem;
			background-color: var(--ca_blue_dark);
			width: 10rem;
			height: 8rem;
			border-radius: 0 0 0 1rem;
			right: 5rem;
			bottom: 2rem;
		}
	}
	#video {
		display: grid;
		grid-auto-flow: row;
		gap: 1rem;
		margin-top: 1rem;
	}
	.someCards {
		display: flex;
		background-color: var(--ca_supp_llbeige);
		flex-direction: row;
		gap: 1.5rem;
		width: 100%;
		flex-wrap: wrap;
		justify-content: center;
		flex: 1 0;
	}
</style>
