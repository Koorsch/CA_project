<style>
	article {
		display: grid;
		grid-auto-flow: row;
		gap: 1rem;
		margin-top: 1rem;
	}
	.hero {
		position: relative;
		width: 100%;
		height: fit-content;
		& video {
			width: 100%;
			height: 100%;
			object-fit: fill;
			aspect-ratio: 16/9;
		}
		& h2 {
			position: absolute;
			display: flex;
			justify-content: center;
			align-items: center;
			padding: 1rem;
			background-color: var(--ca_blue_norm);
			width: 10rem;
			height: 8rem;
			border-radius: 0 0 0 1rem;
			left: 5vw;
			bottom: 5vh;
		}
	}
</style>
