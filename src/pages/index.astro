<style>
	.hero {
		position: relative;
		height: 100%;
		height: fit-content;
		& video {
			width: 100%;
			height: 100%;
			object-fit: contain;
			aspect-ratio: 16/9;
		}
		& h2 {
			position: absolute;
			display: flex;
			justify-content: center;
			align-items: center;
			padding: 1rem;
			background-color: var(--ca_blue_norm);
			width: 10rem;
			height: 8rem;
			border-radius: 0 0 0 1rem;
			left: 5vw;
			bottom: 5vh;
		}
	}
	.video {
		display: grid;
		grid-auto-flow: row;
		gap: 1rem;
		margin-top: 1rem;
	}
	.someCards {
		display: flex;
		flex-direction: row;
		gap: 1.5rem;
		width: 100%;
		flex-wrap: wrap;
		justify-content: center;
		flex: 1 0;
		 & :nth-last-col {
			
		 }
	}
</style>
