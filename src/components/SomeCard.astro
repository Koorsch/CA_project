---
const {headerText, bodyText, imgSrc, imgAlt, buttonVariant, buttonText, someVariant, hasButton} = Astro.props;
import Button from "./Button.astro";
---

<section data-variant={someVariant}>
    <img src=`media/image/${imgSrc}` alt={imgAlt}>
    <div>
        <h2>{headerText}</h2>
        <p>{bodyText}</p>
        {hasButton && <Button buttonVariant={buttonVariant} buttonText={buttonText}/>}
    <div>

</section>
<style>
section {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr auto;
    min-width: 120px;
    max-width: 400px;
    margin: 1rem;
    gap: 1rem;
    justify-items: left;

    & img {
        width: 100%;
        height: 100%;
        object-fit: fill;
        padding: 0.5rem;
    }
    & div {
        & h2 {
            margin: 1rem;

        }
        & p {
            margin: 1rem;
        }
    }
}
</style>